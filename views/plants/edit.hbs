<div class="add-plant-box">
  <h2 class="edit-plant-header">Edit plant</h2>
<div class="edit-plant-form">

{{#with plant}}
<form action="/plants/edit/{{_id}}" enctype="multipart/form-data" method="post">
    <label for="species">Species: </label>
    <input type="text" name="species" id="species" value="{{species}}">
 <div class="add-plant-size">
    <label for="size">Size: </label> 
             <select id="size" name="size" value="{{size}}"> 
               <option value = "cutting">cutting</option>
               <option value = "mature">mature</option>
             </select>
</div>
    <label for="description">Description: </label>
  <br>
<textarea rows = "5" cols = "60" name = "description" id="description" value="{{description}}">{{description}}</textarea>
  
<label>Photo</label>

      <input type="file" name="photo">

<br> 
    

<div class="edit_buttons">
    <button type="submit" class="edit-plant-save" value="SAVE">Save</button>
   
</form>
 <a class="edit-plant-cancel" href="/plants/{{_id}}">Cancel</a>
    </div>
{{/with}}
</div>

</div>
